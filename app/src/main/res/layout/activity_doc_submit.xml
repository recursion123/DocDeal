<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/docSubmit">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            android:layout_gravity="center"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/default_text"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="请选择送审部门"
                android:gravity="center"
                android:textSize="24dp"></TextView>

            <ScrollView
                android:id="@+id/dept_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>
            </ScrollView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_below="@+id/card1">

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/submit"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="提交"
                bootstrapbutton:bb_roundedCorners="true"
                bootstrapbutton:bb_size="small"
                android:layout_gravity="center"
                bootstrapbutton:bb_type="info"></com.beardedhen.androidbootstrap.BootstrapButton>
        </android.support.v7.widget.CardView>
    </RelativeLayout>


</ScrollView>